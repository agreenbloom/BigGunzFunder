<h2>Add Rewards to your Project</h2>

<%= form_for @rewards do |f| %>

  <div class="reward">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="reward">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="reward">
    <%= f.label :amount %>
    <%= f.number_field :amount %>
  </div>

  <div class="reward">
    <%= f.label :limit %>
    <%= f.number_field :limit %>
  </div>

  <div class="submit">
    <%= f.button "Create Reward" %>
  </div>

<% end %>
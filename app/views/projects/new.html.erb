<h2>Create Project</h2>

<%= form_for @project do |f| -%>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>
  <div class="field">
    <%= f.label :goal %>
    $<%= f.number_field :goal %>.00
  </div>

  <h4>Add rewards</h4>

  <div id="rewards">
    <%= f.fields_for :rewards do |reward_fields| %>
      <%= render 'reward_fields', f: reward_fields %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add reward', f, :rewards %>
    </div>
  </div>

  <div class="field">
    <%= f.button "Create Project" %>
  </div>
<% end %>